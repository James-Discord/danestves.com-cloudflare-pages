{
  "name": "danestves-frontend",
  "version": "3.3.0",
  "description": "Frontend website onf @danestves portfolio made with NextJS & GraphCMS",
  "repository": {
    "type": "git",
    "url": "https://github.com/danestves/website.git"
  },
  "author": "Daniel Esteves <estevesd8@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "generate": "DOTENV_CONFIG_PATH=.env.local graphql-codegen -r dotenv/config --config codegen.yml",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'feat(auto): updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'feat(auto): updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'feat(auto): updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags"
  },
  "dependencies": {
    "@fec/remark-a11y-emoji": "^3.1.0",
    "@flayyer/flayyer": "^2.3.2",
    "@giphy/js-fetch-api": "^4.0.2",
    "@giphy/react-components": "^3.0.7",
    "@graphcms/react-image": "^1.0.1",
    "@headlessui/react": "^1.2.0",
    "@heroicons/react": "^1.0.1",
    "algoliasearch": "^4.9.3",
    "browser-monads-ts": "^1.2.2",
    "clsx": "^1.1.1",
    "date-fns": "^2.22.1",
    "firebase-admin": "^9.9.0",
    "googleapis": "^76.0.0",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "gray-matter": "^4.0.3",
    "he": "^1.2.0",
    "isomorphic-fetch": "^3.0.0",
    "kwesforms": "2.1.10",
    "mdx-embed": "^0.0.19",
    "next": "^11.0.0",
    "next-mdx-remote": "^3.0.2",
    "next-plausible": "^1.6.1",
    "next-pwa": "^5.2.21",
    "next-rosetta": "^1.2.7",
    "next-seo": "^4.24.0",
    "next-themes": "^0.0.14",
    "preact": "^10.5.13",
    "prism-react-renderer": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys-hook": "^3.3.1",
    "react-instantsearch-dom": "^6.11.1",
    "react-use": "^17.2.4",
    "react-use-webp-support-check": "^1.0.19",
    "rehype": "^11.0.0",
    "rehype-autolink-headings": "^5.1.0",
    "rehype-slug": "^4.0.1",
    "remark-code-titles": "^0.1.2",
    "swr": "^0.5.6",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@flayyer/flayyer-types": "^1.11.2",
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-operations": "1.18.0",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@tailwindcss/typography": "^0.4.1",
    "@types/he": "^1.1.1",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.7",
    "@types/react-instantsearch-dom": "^6.10.0",
    "@types/rss": "^0.0.28",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.28.0",
    "eslint-config-next": "^11.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "generate-changelog": "^1.8.0",
    "lint-staged": "^11.0.0",
    "next-progressbar": "^1.0.0",
    "postcss": "^8.3.4",
    "prettier": "^2.3.1",
    "rss": "^1.2.2",
    "simple-git-hooks": "^2.4.1",
    "tailwindcss": "^2.1.4",
    "tailwindcss-pseudo-elements": "^2.0.0",
    "typescript": "^4.3.2"
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "yarn type-check"
  }
}
